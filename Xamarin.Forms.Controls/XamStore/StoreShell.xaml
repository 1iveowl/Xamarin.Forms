<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			xmlns:local="clr-namespace:Xamarin.Forms.Controls.XamStore"
			x:Class="Xamarin.Forms.Controls.XamStore.StoreShell">
	<Shell.Resources>
		<ShellAppearance x:Key="defaultAppearance" BackgroundColor="#455A64" ForegroundColor="White" 
						 TitleColor="White" DisabledColor="#B4FFFFFF" UnselectedColor="#95FFFFFF" />
		<ShellAppearance x:Key="greenAppearance" BackgroundColor="#689F39" ForegroundColor="White" 
						 TitleColor="White" DisabledColor="#B4FFFFFF" UnselectedColor="#95FFFFFF" />
		<ShellAppearance x:Key="moviesAppearance" BackgroundColor="#ED3B3B" ForegroundColor="White" 
						 TitleColor="White" DisabledColor="#B4FFFFFF" UnselectedColor="#95FFFFFF" />
		<ShellAppearance x:Key="musicAppearance" BackgroundColor="#EF6C00" ForegroundColor="White" 
						 TitleColor="White" DisabledColor="#B4FFFFFF" UnselectedColor="#95FFFFFF" />
		<ShellAppearance x:Key="booksAppearance" BackgroundColor="#039BE6" ForegroundColor="White" 
						 TitleColor="White" DisabledColor="#B4FFFFFF" UnselectedColor="#95FFFFFF" />
		<ShellAppearance x:Key="newsAppearance" BackgroundColor="#546DFE" ForegroundColor="White" 
						 TitleColor="White" DisabledColor="#B4FFFFFF" UnselectedColor="#95FFFFFF" />
	</Shell.Resources>
	<Shell.FlyoutHeader>
		<local:FlyoutHeader />
	</Shell.FlyoutHeader>
	<ShellItem Title="My apps &amp; games" Icon="grid.png">
		<ShellTabItem Title="Updates" ContentTemplate="{DataTemplate local:UpdatesPage}" />
		<ShellTabItem Title="Installed" ContentTemplate="{DataTemplate local:InstalledPage}" />
		<ShellTabItem Title="Library" ContentTemplate="{DataTemplate local:LibraryPage}" />
	</ShellItem>

	<ShellTabItem Title="My notifications" Icon="bell.png" ContentTemplate="{DataTemplate local:NotificationsPage}" />

	<ShellTabItem Title="Subscriptions" Icon="loop.png" ContentTemplate="{DataTemplate local:SubscriptionsPage}" />

	<ShellItem GroupBehavior="ShowTabs">
		<ShellTabItem ShellItem.ShellAppearance="{StaticResource greenAppearance}" Title="Home" Icon="home.png" FlyoutIcon="home-flyout.png" ContentTemplate="{DataTemplate local:HomePage}" />
		<ShellTabItem ShellItem.ShellAppearance="{StaticResource greenAppearance}" Title="Games" Icon="games.png" FlyoutIcon="games-flyout.png" ContentTemplate="{DataTemplate local:GamesPage}" />
		<ShellTabItem ShellItem.ShellAppearance="{StaticResource moviesAppearance}" Title="Movies &amp; TV" Icon="film.png" ContentTemplate="{DataTemplate local:MoviesPage}" />
		<ShellTabItem ShellItem.ShellAppearance="{StaticResource booksAppearance}" Title="Books" Icon="books.png" FlyoutIcon="books-flyout.png" ContentTemplate="{DataTemplate local:BooksPage}" />
		<ShellTabItem ShellItem.ShellAppearance="{StaticResource musicAppearance}" Title="Music" Icon="headphone.png" ContentTemplate="{DataTemplate local:MusicPage}" />
		<ShellTabItem ShellItem.ShellAppearance="{StaticResource newsAppearance}" Title="Newsstand" Icon="newspaper.png" ContentTemplate="{DataTemplate local:NewsPage}" />
	</ShellItem>

	<ShellTabItem Title="Account" Icon="person.png" ContentTemplate="{DataTemplate local:AccountsPage}" />

	<MenuItem Text="Redeem" Icon="card.png" />
	
	<ShellTabItem Title="Wishlist" Icon="star.png" ContentTemplate="{DataTemplate local:WishlistPage}" />
	
	<MenuItem Text="Xam Protect" Icon="jet.png" />
	
	<ShellTabItem Title="Settings" Icon="gear.png" ContentTemplate="{DataTemplate local:SettingsPage}" />


	<Shell.MenuItems>
		<MenuItem Text="Help &amp; feedback" />
		<MenuItem Text="Parent Guide" />
		<MenuItem Text="About Xam Store" />
	</Shell.MenuItems>
</Shell>